<nav class="navbar navbar-toggleable-md navbar-light bg-faded" id="navbar">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" id="navbarHeader" href="#">My Medical Diary</a>
</nav>
<!-- Main Row -->
<div class="row">
    
<!-- Doctors Section -->
<div class="col-md-6">
    <div class="welcomeDiv">
        <h1 class="welcome">My Doctors</h1>
        <!-- Doctors handlebars -->
        <div id="hbDoc" role="tablist" aria-multiselectable="true">
	          {{#each doctor}} 
	              
	            <div class="card">
	              <div class="card-header noteItem" role="tab" id="heading{{this.id}}">
	                <h5 class="mb-0">
	                  <a data-toggle="collapse" data-parent="#hbDoc" href="#note{{this.id}}" aria-expanded="false" aria-controls="note{{this.id}}">
	                    {{this.name}} 
	                  </a>
	                </h5>
	                    {{this.specialty}}
	              </div>
	              <div id="note{{this.id}}" class="collapse" role="tabpanel" aria-labelledby="heading{{this.id}}">
	                <div class="card-block">
	                  <p>{{this.phone}}</p>
	                  <p>{{this.location}}</p>
	                  <p>Notes: {{this.notes}}</p>
	                   <form class="float-right updateNote" action="/doctors/{{this.id}}?_method=PUT" method="POST">
	                   <button type="submit" class="float-right updateNote" data-toggle="modal" data-target="#newApptModal"><i class="fa fa-pencil-square-o float-right" aria-hidden="true"></i></button>
	                   <form class="float-right updateNote" action="/doctors/{{this.id}}?_method=DELETE" method="DELETE">
	                   <button type="submit" class="float-right updateNote" data-toggle="modal" data-target="#newApptModal"><i class="fa fa-trash-o float-right" aria-hidden="true"></i></button>
	                   <br>
	                </div>
	              </div>
	            </div>
	                 
	          {{/each}}
	         </div>       
	    
	    <!-- Add New Doctor -->
	    <button type="submit" class="btn btn-secondary float-right" id="addNewDoctor" data-toggle="modal" data-target="#newNoteModal">Add A New Doctor</button>
            
            <!-- Doctor Modal -->
            <div class="modal fade" id="newNoteModal" tabindex="-1" role="dialog" aria-labelledby="newNote" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="newMedicalNote">New Doctor</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form class="signup" action="/doctors" method="POST">
                                
                                <div class="form-group">
                                    <label for="inputName">Doctor's Name</label>
                                    <input type="text" class="form-control" name="name" id="inputName" placeholder="Doctor's Name">
                                </div>
                                
                                <div class="form-group">
                                    <label for="inputSpecialty">Doctor's Specialty</label>
                                    <input type="text" class="form-control" name="specialty" id="inputSpecialty" placeholder="Doctor's Specialty">
                                </div>
                                <div class="form-group">
                                    <label for="inputPhoneNumber">Phone Number</label>
                                    <input type="text" class="form-control" name="phone" id="inputPhoneNumber" placeholder="Example: 000 000 0000">
                                </div>
                                <div class="form-group">
                                    <label for="inputLocation">Doctor's Location</label>
                                    <input type="text" class="form-control" name="location" id="inputLocation" placeholder="Doctor's Location">
                                </div>
                                <div class="form-group">
                                    <label for="inputNotes">Any Additional Notes</label>
                                    <textarea class="form-control" rows="5" name="notes" id="inputNotes" placeholder="Notes"></textarea>
                                </div>
                                
                            </div>
                            <div class="modal-footer">
                                <button type="cancel" class="btn btn-secondary" id="cancelButton" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-secondary" id="newDoctorSubmit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- End New Doctor -->
        </div>
    </div>
</div>
<footer class="footer">
    <div class="container">
        <span class="text-muted">&copy; </span>
    </div>
</footer>